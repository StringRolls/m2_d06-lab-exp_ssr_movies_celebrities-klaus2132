<h2>Edit the movie information</h2>

<form action="/movies/{{movies._id}}/edit" method="POST">

    <label for="title"> Title:</label>
    <input type="text" name="title" value="{{movies.title}}">
<br>
    <label for="genre"> Genre:</label>
    <input type="text" name="genre" value="{{movies.genre}}">
<br>
    <label for="plot"> Plot:</label>
    <input type="text" name="plot" value="{{movies.plot}}">
<br>
    <label for="cast"> Cast:</label>
    <select name="cast" multiple>
    <br>    
    {{#each celebrities.celebrities}}
        <option value="{{_id}}">{{name}}</option>
    {{/each}}
    </select>
<br>
    <button type="submit">Confirm</button>
    <br>
    <a href="/movies">Go back to movies</a>
</form>